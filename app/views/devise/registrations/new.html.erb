

<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'well form-horizontal'}) do |f| %>

  <%= f.error_notification id: 'user_error_message', class: 'form_error' %>
 
 <%= f.input :name %>
 <%= f.input :email %>
 <%= f.input :password %>
 <%= f.input :password_confirmation %>
 
 	

<div class="form-actions" >

  	<%= f.submit "Sign up", class: "btn btn-success" %></div>
<% end %>
  


<%= render "devise/shared/links" %>
